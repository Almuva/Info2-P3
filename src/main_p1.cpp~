#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <unistd.h> //OJO
#include <string.h>

#include <Imagen.h>
#include <Magick++.h>
#include <iostream> 

#include <mg.h>
#include <seam_finding.h>

using namespace std; 
using namespace Magick; 

Imagen uR,uG,uB;

void columnOut(Imagen E,unsigned int N){
	
	unsigned int f=E.fils(),c=E.cols()+N,L=f*c,j=0;
	// new smaller image
	Imagen aR(f,c),aG(f,c),aB(f,c);
	
	for(unsigned int i=0;i<L;i++){
		if(E.datos[i+j]==10E20){ //mark
			j++;
		}
		// shift pixels
		aR.datos[i]=uR.datos[i+j];
		aG.datos[i]=uG.datos[i+j];
		aB.datos[i]=uB.datos[i+j];
	}
	
	//replace (+resize) original
	uR = aR;
	uG = aG;
	uB = aB;
}

void rowOut(Imagen E,unsigned int N){
	
	unsigned int f=E.fils()+N,c=E.cols();
	Imagen aR(f,c),aG(f,c),aB(f,c);
	
	for(unsigned int j=0;j<c;j++){
	  int A = 0;
	  for(unsigned int i=0;i<f;i++){
	    
	    if(E(i,j)==10E20){
	      A++;
	    }
	    
	    aR(i,j)=uR(i+A,j);
	    aG(i,j)=uG(i+A,j);
	    aB(i,j)=uB(i+A,j);
	  }
	}
	uR = aR;
	uG = aG;
	uB = aB;
}

void rowsIn(Imagen E,unsigned int N){
	
	cout<<"xxx"<<endl;
	escribe("extra_seam.jpg",E);
  
	unsigned int f=E.fils()+N,c=E.cols();
	Imagen aR(f,c),aG(f,c),aB(f,c);
	cout<<"x3"<<endl;
	
	for(unsigned int j=0;j<c;j++){
	  int A = 0;
	  for(unsigned int i=0;i<f;i++){
	    
		 aR(i+A,j)=uR(i,j);
	    aG(i+A,j)=uG(i,j);
	    aB(i+A,j)=uB(i,j);
		 
	    if(E(i,j)==10E20){ //add one!
			 A++;
			 aR(i+A,j)=uR(i,j)/2+uR(i+1,j)/2;
			 aG(i+A,j)=uG(i,j)/2+uG(i+1,j)/2;
			 aB(i+A,j)=uB(i,j)/2+uB(i+1,j)/2;

	    }

	  }
	}
	cout<<"x4"<<endl;
	uR = aR;
	uG = aG;
	uB = aB;
}

